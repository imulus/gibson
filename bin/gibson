#!/usr/bin/env sh

set -e

sudo -v

[[ -f ~/.ssh/id_rsa.pub ]] || ssh-keygen -t rsa
sudo mkdir -p /usr/local /opt/homebrew-cask
sudo chown -R `whoami` /usr/local /opt/homebrew-cask

command -v brew &>/dev/null ||
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew doctor

brew tap caskroom/cask
brew tap homebrew/binary
brew tap thoughtbot/formulae
brew install ack
brew install brew-cask
brew install git
brew install git-extras
brew install gitsh
brew install go
brew install heroku-toolbelt
brew install httpie
brew install hub
brew install imagemagick
brew install node
brew install packer
brew install postgresql
brew install rbenv
brew install rbenv-gem-rehash
brew install reattach-to-user-namespace
brew install ruby-build
brew install ssh-copy-id
brew install the_silver_searcher
brew install tig
brew install tmux
brew install tree
brew install vim
brew install wget
brew install zsh
brew cask install airfoil
brew cask install caffeine
brew cask install divvy
brew cask install dropbox
brew cask install google-chrome
brew cask install macvim
brew cask install onepassword
brew cask install rdio
brew cask install screenhero
brew cask install slack
brew cask install transmission
brew cask install transmit
brew cask install vagrant
brew cask install virtualbox
brew cask install vlc
brew cask install ynab
npm install --global bower
npm install --global browserify
npm install --global coffee-script
npm install --global grunt-cli
npm install --global gulp
npm install --global http-server
npm install --global jshint
npm install --global jspm
npm install --global karma-cli
npm install --global less
npm install --global live-server
npm install --global mocha
npm install --global psi
npm install --global stylestats
npm install --global yuidocjs
eval "$(rbenv init -)"

rbenv install 2.0.0-p598
rbenv install 2.2.0

rbenv global 2.2.0

rbenv rehash
rbenv shell 2.0.0-p598

gem update --system
gem install bundler
gem install rails

rbenv shell 2.2.0

gem update --system
gem install bundler
gem install rails

rbenv shell --unset
